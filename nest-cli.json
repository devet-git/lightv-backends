{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/lightv-core/src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/lightv-core/tsconfig.app.json"
	},
	"monorepo": true,
	"root": "apps/lightv-core",
	"projects": {
		"lightv-backends": {
			"type": "application",
			"root": "apps/lightv-backends",
			"entryFile": "main",
			"sourceRoot": "apps/lightv-backends/src",
			"compilerOptions": {
				"tsConfigPath": "apps/lightv-backends/tsconfig.app.json"
			}
		},
		"lightv-core": {
			"type": "application",
			"root": "apps/lightv-core",
			"entryFile": "main",
			"sourceRoot": "apps/lightv-core/src",
			"compilerOptions": {
				"tsConfigPath": "apps/lightv-core/tsconfig.app.json"
			}
		},
		"lightv-study": {
			"type": "application",
			"root": "apps/lightv-study",
			"entryFile": "main",
			"sourceRoot": "apps/lightv-study/src",
			"compilerOptions": {
				"tsConfigPath": "apps/lightv-study/tsconfig.app.json"
			}
		}
	}
}